<div class="control">
	<div class="tags has-addons">
		<span class="tag is-dark is-medium">
			<i data-feather="@Icon"></i>
		</span>
		<span class="tag @ColorClass is-medium">
			<a href="@Link" style="color: inherit" target="_blank">@Label</a>
		</span>
	</div>
</div>

@code {
	[Parameter]
	public string Icon { get; set; } = "";
	[Parameter]
	public string Link { get; set; } = "";
	[Parameter]
	public string Label { get; set; } = "";
	[Parameter]
	public string ColorClass { get; set; } = "is-primary";

}
